{
  "name": "frontend",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "node-sass": "^6.0.0",
    "react": "^17.0.2",
    "react-accessible-accordion": "^3.3.4",
    "react-dom": "^17.0.2",
    "react-loader-spinner": "^4.0.0",
    "react-scripts": "4.0.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build && move build ../frontend_build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "watch": "npx npm-watch"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true
    },
    "extends": [
      "airbnb"
    ],
    "rules": {
      "react/prop-types": "off",
      "no-restricted-syntax": "off"
    }
  },
  "watch": {
    "build": {
      "patterns": [
        "src"
      ],
      "extensions": "html,scss,css,js,jsx,png,svg,jpg,ico"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "eslint": "7.28.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-react": "7.21.5",
    "eslint-plugin-react-hooks": "1.7.0",
    "npm-watch": "^0.9.0"
  }
}
